html(lang="en")
	head
		title valstream
	script(type="text/javascript", src="https://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js")
	script(type="text/javascript", src="http://documentcloud.github.com/underscore/underscore-min.js")
	script(type="text/javascript", src="/socket.io/socket.io.js")
	script(type="text/javascript", src="/swag.js")
	
	body
	#heading
		h1 valstream
	#content
		select(size=40)#roomList
			each room in rooms
				option= room
		button#deleteRoomButton Delete Room (not implemented yet)
		button#changeRoomNameButton Rename Room (not implemented yet)

		select(size=40)#VALsList
		#thisRoomStats
			#genRoomData 	
				//num users, num djs, mods 
			#videoLists

				#roomHistory
					#playlist-template(style="display:none;")
						.playlistContainer
				
				#valsRecs
					#playlist-template(style='display:none;')
						.playlistContainer
					//optional - another playlist, to
					//differentiate b/w curated + VAL's original suggestions
				
				#valSuggested
					#playlist-template(style='display:none;')
						.playlistContainer			
			
			#forms
				input#vidInput(rows='15', cols='37', wrap='physical')
				button#addVideo Add Video By ID
	#footer
	
	
